{
  "private": true,
  "name": "react-design-system",
  "version": "0.0.0",
  "scripts": {
    "build": "turbo run build --filter=@chepe/ui --filter=@chepe/icons",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev --filter=docs",
    "fetch-tokens": "turbo run fetch-tokens",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:component": "turbo run generate:component --filter=generator",
    "lint": "turbo run lint",
    "storybook": "turbo run dev --filter=docs",
    "storybook-build": "turbo run build --filter=docs",
    "storybook-test": "npm run storybook-build && turbo run test --filter=docs --color",
    "test": "turbo run test --filter=@chepe/ui",
    "web": "turbo run dev --filter=web"
  },
  "workspaces": [
    "apps/*",
    "config/*",
    "packages/*",
    "tools/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.1.0"
}
